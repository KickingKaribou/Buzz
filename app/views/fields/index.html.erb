<p id="notice"><%= notice %></p>

<h1>Fields, Fallows, Meadows: FFM</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.rating %></td>
        <td><%= field.size %>m²</td>
        <td><%= field.address %></td>
        <td><%= field.description %></td>
        <td><%= field.price %>€</td>
        <td><%= link_to 'Show', field %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New field', new_field_path %>